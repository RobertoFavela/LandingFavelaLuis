<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="175dp"
        android:text="Convertor de temperaturas"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputGradosFa"
        android:layout_width="209dp"
        android:layout_height="60dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Ingrese Grados"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toStartOf="@+id/gradosF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titulo" />

    <EditText
        android:id="@+id/inputGradosCe"
        android:layout_width="213dp"
        android:layout_height="69dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Ingrese grados"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputGradosFa" />

    <TextView
        android:id="@+id/gradosF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="86dp"
        android:text="°F"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/inputGradosFa"
        app:layout_constraintTop_toBottomOf="@+id/Titulo" />



    <TextView
        android:id="@+id/gradosC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="°C"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/inputGradosCe"
        app:layout_constraintTop_toBottomOf="@+id/gradosF" />

    <Button
        android:id="@+id/Convertir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="163dp"
        android:text="Convertir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputGradosCe" />

    <TextView
        android:id="@+id/colorsito"
        android:layout_width="91dp"
        android:layout_height="248dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="283dp"
        android:text="Temperatura"
        android:backgroundTint="@color/azul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titulo" />


</androidx.constraintlayout.widget.ConstraintLayout>